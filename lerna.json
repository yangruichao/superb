{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "access": "public",
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "ignoreChanges": [
    "**/*.md"
  ],
  "version": "0.3.1"
}
